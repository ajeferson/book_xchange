<%= render 'layouts/list_header', extra_title: "for #{@street.name}" %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="table-responsive">

      <table class="table table-bordered table-hover">

        <thead>
        <tr>
          <th>Number</th>
          <th>Complement</th>
          <th>Cep</th>
          <th colspan="3">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @addresses.each do |address| %>
            <tr>
              <td><%= address.number %></td>
              <td><%= address.complement %></td>
              <td><%= address.cep %></td>
              <td><%= link_to 'Show', address, class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Edit', edit_address_path(address), class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
        <% end %>
        </tbody>

      </table>

    </div>

  </div>

</div>

<div class="row">
  <div class="col-sm-12">
    <%= link_to 'Back', street_path(@street), class: 'btn btn-primary btn-xs' %>
  </div>
</div>