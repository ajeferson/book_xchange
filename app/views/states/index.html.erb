<%= render 'layouts/list_header', extra_title: "for #{@country.name}" %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="table-responsive">

      <table class="table table-bordered table-hover">

        <thead>
        <tr>
          <th>Name</th>
          <th colspan="3">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @states.each do |state| %>
            <tr>
              <td><%= state.name %></td>
              <td><%= link_to 'Show', state, class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Edit', edit_state_path(state), class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
        <% end %>
        </tbody>

      </table>

    </div>

  </div>

</div>

<div class="row">
  <div class="col-sm-12">
    <%= link_to 'Back', countries_path, class: 'btn btn-primary btn-xs' %>
  </div>
</div>