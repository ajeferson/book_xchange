<%= render 'layouts/errors', resource: @state %>

<%= form_for(@state, url: @state.persisted? ? state_path(@state) : country_states_path(@country), method: @state.persisted? ? :patch : :post, html: {class: 'form-horizontal'}) do |f| %>


    <div class="form-group">
      <%= f.label :name, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name', required: true %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit class: 'btn btn-success pull-right' %>
        <%= link_to 'Back', country_states_path(@country), class: 'btn btn-warning pull-right', style: 'margin-right: 10px' %>
      </div>
    </div>

<% end %>