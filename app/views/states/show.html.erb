<%= render 'layouts/show_header' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="well">

      <div>
        <strong>Name:</strong>
        <%= @state.name %>
      </div>

    </div>

  </div>

</div>

<div class="row">
  <div class="col-sm-12">
    <%= link_to 'Cities', state_cities_path(@state), class: 'btn btn-primary btn-xs' %>
    <%= link_to 'Edit', edit_state_path(@state), class: 'btn btn-primary btn-xs' %>
    <%= link_to 'Back', country_states_path(@state.country_name), class: 'btn btn-warning btn-xs' %>
  </div>
</div>