<%= render 'layouts/show_header' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="well">

      <div>
        <strong>Points:</strong>
        <%= @evaluation.points %>
      </div>

      <div>
        <strong>Comment:</strong>
        <%= @evaluation.comment %>
      </div>

    </div>

  </div>

</div>

<div class="row">
  <div class="col-sm-12">
    <%= link_to 'Edit', edit_evaluation_path(@evaluation), class: 'btn btn-primary btn-xs' %>
    <%= link_to 'Back', evaluations_path, class: 'btn btn-warning btn-xs' %>
  </div>
</div>