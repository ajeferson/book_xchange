<%= render 'layouts/errors', resource: @evaluation %>

<%= form_for(@evaluation, url: @evaluation.persisted? ? evaluation_path(@evaluation) : evaluations_path, method: @evaluation.persisted? ? :patch : :post, html: {class: 'form-horizontal'}) do |f| %>

    <div class="form-group">
      <%= f.label :points, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.number_field :points, class: 'form-control', placeholder: 'Points', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :comment, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :comment, class: 'form-control', placeholder: 'Comment', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :user, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.select :user_username,  nil, {include_blank: 'Selecione uma opção'}, required: true, class: 'form-control' do %>
            <%= options_for_select users_options_for_select, selected: @evaluation.user_username %>
        <% end %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :book, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.select :book_isbn,  nil, {include_blank: 'Selecione uma opção'}, required: true, class: 'form-control' do %>
            <%= options_for_select books_options_for_select, selected: @evaluation.book_isbn %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit class: 'btn btn-success pull-right' %>
        <%= link_to 'Back', evaluations_path, class: 'btn btn-warning pull-right', style: 'margin-right: 10px' %>
      </div>
    </div>

<% end %>