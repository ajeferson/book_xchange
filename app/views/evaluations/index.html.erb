<%= render 'layouts/list_header' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="table-responsive">

      <table class="table table-bordered table-hover">

        <thead>
        <tr>
          <th>Book</th>
          <th>Points</th>
          <th>Comment</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @evaluations.each do |evaluation| %>
            <tr>
              <td><%= evaluation.book.name %></td>
              <td><%= evaluation.points %></td>
              <td><%= evaluation.comment %></td>
              <td><%= link_to 'Show', evaluation_path(evaluation), class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Edit', edit_evaluation_path(evaluation), class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destroy', evaluation_path(evaluation), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
        <% end %>
        </tbody>

      </table>

    </div>

  </div>

</div>