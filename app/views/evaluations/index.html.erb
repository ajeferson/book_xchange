<p id="notice"><%= notice %></p>

<h1>Listing Evaluations</h1>

<table>
  <thead>
    <tr>
      <th>Points</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.points %></td>
        <td><%= evaluation.comment %></td>
        <td><%= link_to 'Show', evaluation_path(evaluation.cool_id) %></td>
        <td><%= link_to 'Edit', edit_evaluation_path(evaluation.cool_id) %></td>
        <td><%= link_to 'Destroy', evaluation_path(evaluation.cool_id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Evaluation', new_evaluation_path %>
