<%= render 'layouts/list_header_title', title: 'Top titles' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="table-responsive">

      <table class="table table-bordered table-hover">

        <tr>
          <th>Nome</th>
          <th>Pontos</th>
        </tr>

        <% @books.each do |book| %>
            <tr>
              <td><%= book.name %></td>
              <td><%= book.points %></td>
            </tr>
        <% end %>

      </table>

    </div>

  </div>

</div>