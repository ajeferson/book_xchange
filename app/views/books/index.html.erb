<%= render 'layouts/list_header' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="table-responsive">

      <table class="table table-bordered table-hover">

        <thead>
        <tr>
          <th>Pages</th>
          <th>Isbn</th>
          <th>Name</th>
          <th>Publish date</th>
          <th>Edition</th>
          <th colspan="3">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @books.each do |book| %>
            <tr>
              <td><%= book.pages %></td>
              <td><%= book.isbn %></td>
              <td><%= book.name %></td>
              <td><%= book.publish_date %></td>
              <td><%= book.edition %></td>
              <td><%= link_to 'Show', book, class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
        <% end %>
        </tbody>

      </table>

    </div>

  </div>

</div>