<%= render 'layouts/errors', resource: @street %>

<%= form_for(@street, url: @street.persisted? ? street_path(@street) : neighborhood_streets_path(@neighborhood), method: @street.persisted? ? :patch : :post, html: {class: 'form-horizontal'}) do |f| %>

    <div class="form-group">
      <%= f.label :name, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :kind, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :kind, class: 'form-control', placeholder: 'Kind', required: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit class: 'btn btn-success pull-right' %>
        <%= link_to 'Back', neighborhood_streets_path(@street.persisted? ? @street.neighborhood : @neighborhood), class: 'btn btn-warning pull-right', style: 'margin-right: 10px' %>
      </div>
    </div>

<% end %>