<%= render 'layouts/show_header' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="well">

      <div>
        <strong>Name:</strong>
        <%= @street.name %>
      </div>

      <div>
        <strong>Kind:</strong>
        <%= @street.kind %>
      </div>

    </div>

  </div>

</div>

<div class="row">
  <div class="col-sm-12">
    <%= link_to 'Addresses', street_addresses_path(@street), class: 'btn btn-primary btn-xs' %>
    <%= link_to 'Edit', edit_street_path(@street), class: 'btn btn-primary btn-xs' %>
    <%= link_to 'Back', neighborhood_streets_path(@street.neighborhood), class: 'btn btn-warning btn-xs' %>
  </div>
</div>