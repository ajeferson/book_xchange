<%= render 'layouts/list_header' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="table-responsive">

      <table class="table table-bordered table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>CPF</th>
          <th>Date</th>
          <th colspan="3">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @authors.each do |author| %>
            <tr>
              <td><%= author.name %></td>
              <td><%= author.cpf %></td>
              <td><%= l(author.birth_date, format: :long) %></td>
              <td><%= link_to 'Show', author, class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Edit', edit_author_path(author), class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>

  </div>

  <br>

</div>
