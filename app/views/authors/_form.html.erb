<%= render 'layouts/errors', resource: @author %>

<%= form_for(@author, html: {class: 'form-horizontal'}) do |f| %>

    <div class="form-group">
      <%= f.label :name, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name', required: true %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :cpf, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :cpf, class: 'form-control', placeholder: 'CPF', required: true %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :bith_date, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.date_field :birth_date, class: 'form-control', placeholder: 'Birth Date', required: true %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit class: 'btn btn-success pull-right' %>
        <%= link_to 'Back', authors_path, class: 'btn btn-warning pull-right', style: 'margin-right: 10px' %>
      </div>
    </div>

<% end %>