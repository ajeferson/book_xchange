<%= render 'layouts/list_header', extra_title: "for #{@state.name}" %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="table-responsive">

      <table class="table table-bordered table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th colspan="3">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @cities.each do |city| %>
            <tr>
              <td><%= city.name %></td>
              <td><%= link_to 'Show', city, class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Edit', edit_city_path(city), class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>

  </div>

</div>

<br>

<div class="row">
  <div class="col-sm-12">
    <%= link_to 'Back', state_path(@state), class: 'btn btn-primary btn-xs' %>
  </div>
</div>
