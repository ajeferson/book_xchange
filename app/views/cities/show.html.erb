<%= render 'layouts/show_header' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="well">

      <div>
        <strong>Name:</strong>
        <%= @city.name %>
      </div>

    </div>

  </div>

</div>

<div class="row">
  <div class="col-sm-12">
    <%= link_to 'Neighborhoods', city_neighborhoods_path(@city), class: 'btn btn-primary btn-xs' %>
    <%= link_to 'Edit', edit_city_path(@city), class: 'btn btn-primary btn-xs' %>
    <%= link_to 'Back', state_cities_path(@city.state), class: 'btn btn-warning btn-xs' %>
  </div>
</div>