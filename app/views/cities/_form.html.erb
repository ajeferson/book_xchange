<%= render 'layouts/errors', resource: @city %>

<%= form_for(@city, url: @city.persisted? ? city_path(@city) : state_cities_path(@state), method: @city.persisted? ? :patch : :post, html: {class: 'form-horizontal'}) do |f| %>

    <div class="form-group">
      <%= f.label :name, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name', required: true %>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit class: 'btn btn-success pull-right' %>
        <%= link_to 'Back', state_cities_path(@city.persisted? ? @city.state : @state), class: 'btn btn-warning pull-right', style: 'margin-right: 10px' %>
      </div>
    </div>
<% end %>