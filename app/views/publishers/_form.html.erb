<%= render 'layouts/errors', resource: @publisher %>

<%= form_for(@publisher, html: {class: 'form-horizontal'}) do |f| %>

    <div class="form-group">
      <%= f.label :name, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :cnpj, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :cnpj, class: 'form-control', placeholder: 'CNPJ', required: true %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :address, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.select :address_id,  nil, {include_blank: 'Selecione uma opção'}, required: true, class: 'form-control' do %>
            <%= options_for_select addresses_options_for_select, selected: @publisher.address_id %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit class: 'btn btn-success pull-right' %>
        <%= link_to 'Back', publishers_path, class: 'btn btn-warning pull-right', style: 'margin-right: 10px' %>
      </div>
    </div>

<% end %>