<%= render 'layouts/list_header' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="table-reponsive">

      <table class="table table-bordered table-hover">

        <thead>
        <tr>
          <th>Name</th>
          <th>Cnpj</th>
          <th colspan="3">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @publishers.each do |publisher| %>
            <tr>
              <td><%= publisher.name %></td>
              <td><%= publisher.cnpj %></td>
              <td><%= link_to 'Show', publisher, class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Edit', edit_publisher_path(publisher), class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destroy', publisher, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
        <% end %>
        </tbody>

      </table>

    </div>

  </div>

</div>