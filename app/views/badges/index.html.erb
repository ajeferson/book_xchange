<%= render 'layouts/list_header' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="table-responsive">

      <table class="table table-bordered table-hover">

        <thead>
        <tr>
          <th>Name</th>
          <th colspan="3">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @badges.each do |badge| %>
            <tr>
              <td><%= badge.name %></td>
              <td><%= link_to 'Show', badge, class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Edit', edit_badge_path(badge), class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destroy', badge, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
        <% end %>
        </tbody>

      </table>

    </div>

  </div>

</div>