<%= render 'layouts/list_header' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="table-responsive">

      <table class="table table-bordered table-hover">

        <thead>
        <tr>
          <th>Body</th>
          <th>Date</th>
          <th>Sender</th>
          <th>Addressee</th>
          <th colspan="3">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @messages.each do |message| %>
            <tr>
              <td><%= message.body %></td>
              <td><%= l(message.date, format: :long) %></td>
              <td><%= message.sender.name %></td>
              <td><%= message.addressee.name %></td>
              <td><%= link_to 'Show', message, class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Edit', edit_message_path(message), class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
        <% end %>
        </tbody>

      </table>

    </div>

  </div>

</div>