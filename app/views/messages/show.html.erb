<%= render 'layouts/show_header' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="well">

      <div>
        <strong>Body:</strong>
        <%= @message.body %>
      </div>

      <div>
        <strong>Date:</strong>
        <%= @message.date %>
      </div>

      <div>
        <strong>Sender:</strong>
        <%= @message.sender.name %>
      </div>

      <div>
        <strong>Addressee:</strong>
        <%= @message.addressee.name %>
      </div>

    </div>

  </div>

</div>

<div class="row">
  <div class="col-sm-12">
    <%= link_to 'Edit', edit_message_path(@message), class: 'btn btn-primary btn-xs' %>
    <%= link_to 'Back', messages_path, class: 'btn btn-warning btn-xs' %>
  </div>
</div>