<%= render 'layouts/errors', resource: @message %>

<%= form_for(@message, html: {class: 'form-horizontal'}) do |f| %>

    <div class="form-group">
      <%= f.label :body, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :body, class: 'form-control', placeholder: 'Body', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :date, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.datetime_select :date, {placeholder: 'Date', required: true}, {class: 'form-control datetime-select'} %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :sender, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.select :sender_username,  nil, {include_blank: 'Selecione uma opção'}, required: true, class: 'form-control' do %>
            <%= options_for_select users_options_for_select, selected: @message.sender_username %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :addressee, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.select :addressee_username,  nil, {include_blank: 'Selecione uma opção'}, required: true, class: 'form-control' do %>
            <%= options_for_select users_options_for_select, selected: @message.addressee_username %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit class: 'btn btn-success pull-right' %>
        <%= link_to 'Back', messages_path, class: 'btn btn-warning pull-right', style: 'margin-right: 10px' %>
      </div>
    </div>

<% end %>