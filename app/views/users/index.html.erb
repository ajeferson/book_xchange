<%= render 'layouts/list_header' %>

<%= render 'layouts/flash_success' %>

<div class="row">

  <div class="col-sm-12">

    <div class="table-responsive">

      <table class="table table-bordered table-hover">

        <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Username</th>
          <th>Password</th>
          <th>Birth date</th>
          <th colspan="3">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.username %></td>
              <td><%= user.password %></td>
              <td><%= l(user.birth_date, format: :long) %></td>
              <td><%= link_to 'Show', user, class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary btn-xs' %></td>
              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
            </tr>
        <% end %>
        </tbody>

      </table>

    </div>

  </div>

</div>