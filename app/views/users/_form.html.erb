<%= render 'layouts/errors', resource: @user %>

<%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>

    <div class="form-group">
      <%= f.label :name, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email', required: true %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :username, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :username, class: 'form-control', placeholder: 'Username', required: true %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :password, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :password, class: 'form-control', placeholder: 'Password', required: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :birth_date, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.date_field :birth_date, class: 'form-control', placeholder: 'Birth Date', required: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-10">
        <%= f.submit class: 'btn btn-success pull-right' %>
        <%= link_to 'Back', users_path, class: 'btn btn-warning pull-right', style: 'margin-right: 10px' %>
      </div>
    </div>

<% end %>